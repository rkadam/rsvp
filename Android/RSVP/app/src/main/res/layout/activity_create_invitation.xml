<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context="com.pandora.rsvp.ui.CreateInvitationActivity">

        <!-- +++++ Invitation Details, section Header +++++ -->

        <com.pandora.rsvp.ui.components.SectionHeader
                android:id="@+id/create_invitation_activity_invitation_details_header"
                android:text="@string/create_invitation_activity_invitation_details_header"
                style="@style/SectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View android:id="@+id/create_invitation_activity_invitation_details_underline"
              android:layout_below="@+id/create_invitation_activity_invitation_details_header"
              android:background="@color/section_underline_color"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/header_underline_width"/>

        <!-- Invitation Description -->

        <com.pandora.rsvp.ui.components.FieldLabel
                android:id="@+id/create_invitation_activity_invitation_description_label"
                android:layout_below="@+id/create_invitation_activity_invitation_details_underline"
                android:layout_marginTop="@dimen/field_label_margin_top"
                android:text="@string/create_invitation_activity_invitation_description"
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <EditText
                android:id="@+id/create_invitation_activity_invitation_description_edit_text"
                android:layout_below="@+id/create_invitation_activity_invitation_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="5"
                android:gravity="top|left"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:background="@drawable/edit_text_style"
                android:padding="5dp"
                />

        <!-- Number of Invitations Available -->

        <com.pandora.rsvp.ui.components.FieldLabel
                android:id="@+id/create_invitation_activity_num_invites_label"
                android:layout_below="@+id/create_invitation_activity_invitation_description_edit_text"
                android:layout_marginTop="@dimen/field_label_margin_top"
                android:text="@string/create_invitation_activity_num_invitations_available"
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <EditText
                android:id="@+id/create_invitation_activity_num_invites_edit_text"
                android:layout_below="@+id/create_invitation_activity_num_invites_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:digits="0123456789"
                android:minEms="2"
                android:maxEms="2"
                android:maxLength="2"
                android:maxLines="1"
                android:background="@drawable/edit_text_style"
                android:padding="5dp"
                />

        <!-- RSVP By -->

        <com.pandora.rsvp.ui.components.FieldLabel
                android:id="@+id/create_invitation_activity_rsvp_by"
                android:layout_below="@+id/create_invitation_activity_num_invites_edit_text"
                android:layout_marginTop="@dimen/field_label_margin_top"
                android:text="@string/create_invitation_activity_rsvp_by"
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <EditText
                android:id="@+id/create_invitation_activity_rsvp_date"
                android:layout_below="@+id/create_invitation_activity_rsvp_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="11/20/2015"
                android:maxLines="1"
                android:background="@drawable/edit_text_style"
                android:padding="5dp"
                />

        <EditText
                android:id="@+id/create_invitation_activity_rsvp_time"
                android:layout_toRightOf="@+id/create_invitation_activity_rsvp_date"
                android:layout_alignBaseline="@+id/create_invitation_activity_rsvp_date"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="1:00 pm"
                android:maxLines="1"
                android:background="@drawable/edit_text_style"
                android:padding="5dp"
                />

        <!-- Email Distribution List -->

        <com.pandora.rsvp.ui.components.FieldLabel
                android:id="@+id/create_invitation_activity_email_label"
                android:layout_below="@+id/create_invitation_activity_rsvp_date"
                android:layout_marginTop="@dimen/field_label_margin_top"
                android:text="@string/create_invitation_activity_email_dist_list"
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <EditText
                android:id="@+id/create_invitation_activity_email_edit_text"
                android:layout_below="@+id/create_invitation_activity_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:background="@drawable/edit_text_style"
                android:padding="5dp"
                />
        
        <!-- +++++ Choosing Winner(s), section Header +++++ -->

        <com.pandora.rsvp.ui.components.SectionHeader
                android:id="@+id/create_invitation_activity_choosing_winners_header"
                android:layout_below="@+id/create_invitation_activity_email_edit_text"
                android:layout_marginTop="@dimen/field_label_margin_top"
                android:text="@string/create_invitation_activity_choosing_winners_header"
                style="@style/SectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View android:id="@+id/create_invitation_activity_choosing_winners_underline"
              android:layout_below="@+id/create_invitation_activity_choosing_winners_header"
              android:background="@color/section_underline_color"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/header_underline_width"/>

        
    </RelativeLayout>
</ScrollView>
