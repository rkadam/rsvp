<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context="com.pandora.rsvp.ui.CreateInvitationActivity">

        <com.pandora.rsvp.ui.components.SectionHeader
                android:id="@+id/create_invitation_activity_invitation_details_header"
                android:text="@string/create_invitation_activity_invitation_details_header"
                style="@style/SectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View android:id="@+id/create_invitation_activity_invitation_details_underline"
              android:layout_below="@+id/create_invitation_activity_invitation_details_header"
              android:background="@color/dark_gray"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/header_underline_width"/>

        <com.pandora.rsvp.ui.components.FieldLabel
                android:id="@+id/create_invitation_activity_invitation_description_label"
                android:layout_below="@+id/create_invitation_activity_invitation_details_underline"
                android:layout_marginTop="10dp"
                android:text="@string/create_invitation_activity_invitation_description"
                style="@style/FieldLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <EditText
                android:id="@+id/create_invitation_activity_invitation_description_edit_text"
                android:layout_below="@+id/create_invitation_activity_invitation_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="5"
                android:gravity="top|left"
                android:maxLines="5"
                android:scrollbars="vertical"
                />

    </RelativeLayout>
</ScrollView>
